<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <!-- action empty string sends data to same page -->
    <form action="" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Genre</label>
        <input
          type="type"
          class="form-control"
          placeholder="Fantasy, Poetry etc."
          name="name"
        />
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </body>
</html>
